<div class='container'>
  <h1>Eat Da Burger!</h1>

  <ul>
    {{#each burgers}}
      {{#unless devoured}}
        {{burgers devoured=true}}
      {{/unless}}
    {{/each}}
  </ul>

  <ul>
    {{#each burgers}}
      {{#if devoured}}
        {{burgers devoured=false}}
      {{/if}}
    {{/each}}
  </ul>

  <form class='create-form'>
    <div class='form-group' id='input'>
      <input type='text' id='bu' name='name'>
        <div>
          <button type='submit'>Submit</button>
        </div>
      <p>Enter a burger you want to eat Click the 'Submit' button</p>
    </div>
  </form>
</div>
